# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file                                           controllers.Assets.versioned(path="/public", file: Asset)

# All other routes that lead to an invalid page. Show home page for now, should be
#GET        /*path                                            controllers.HomeController.index(path: String)
GET           /                                                       controllers.HomeController.index


# rest API added routes
GET           /                                                       controllers.UserController.listUsers()

# Call test function
GET           /user/create/$contactEmail<[a-z]+@[a-z]+.[a-z]+>        controllers.HomeController.test(contactEmail: String)

# Creates a DbUser
POST          /users/                                                 controllers.UserController.createUser()

# Read DbUser from by sfuEmail
GET           /users/:id                                              controllers.UserController.retrieveUser(id: String)

# Updates DbUser
PUT           /user/:id                                               controllers.UserController.updateUser(id: String)

# Deletes DbUser by SFU email
DELETE        /user/:id                                               controllers.UserController.deleteUser(id: String)

# Creates a UserShift
POST          /shifts/assign/                                         controllers.UserShiftController.createUserShift()

# Retrieves all shifts tied to a User
GET           /user/shifts/$sfuEmail<[a-z_]+@sfu.ca>                  controllers.UserShiftController.retrieveUserShift(sfuEmail: String)


