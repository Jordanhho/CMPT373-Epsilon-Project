# allow requests for static assets
GET           /assets/*file                                               controllers.Assets.versioned(path="/public", file: Asset)

# redirect all other requests to the SPA page
# ...except API requests with the prefix '/api'
GET           /$p<(?!api).*>                                              controllers.FrontController.index(p: String)

# TODO: All API endpoints need to be like '/api/user'.
# Or we could create our own custom router and use it
# for any requests with the prefix '/api'. This might 
# be the better long-term solution.
# see: https://www.playframework.com/documentation/2.6.x/ScalaRouting#the-routes-file-syntax

# ----------------------- USER APIs ----------------------

#
# DbUser
#

# Create a DbUser
POST          /api/users                                                  controllers.UserController.createUser()

# Read DbUser by sfuEmail
GET           /api/users/:sfuEmail                                        controllers.UserController.retrieveUser(sfuEmail: String)

# Update DbUser by sfuEmail
PUT           /api/users/:sfuEmail                                        controllers.UserController.updateUser(sfuEmail: String)

# Delete DbUser by sfuEmail
DELETE        /api/users                                                  controllers.UserController.deleteUserBySfuEmail()


#
# DbUserShift
#

# Create a DbUserShift
POST          /api/users/shifts                                           controllers.UserShiftController.createUserShift()

# Read DbUserShift by userId
GET           /api/users/:userId/shifts                                   controllers.UserShiftController.retrieveUserShift(userId: Integer)

# Delete DbUserShift by userId
DELETE        /api/users/shifts                                           controllers.UserShiftController.deleteUserShifts()


#
# DbUserTeam
#

# List all DbUserTeams
GET           /api/users/teams                                            controllers.UserTeamController.listUserTeams()

# Create a DbUserTeam
POST          /api/users/teams                                            controllers.UserTeamController.createUserTeam()

# Read DbUserTeam by userId and teamId
GET           /api/users/:userId/teams/:teamId                            controllers.UserTeamController.retrieveUserTeam(userId: Integer, teamId: Integer)

# Delete DbUserTeam by userId and teamId
DELETE        /api/users/teams                                            controllers.UserTeamController.deleteUserTeam()


#
# DbShiftName
#

# Create a DbShiftName
POST          /api/users/shifts/names                                     controllers.ShiftNameController.createShiftName()

# Delete DbShiftName by shiftName
DELETE        /api/users/shifts/names                                     controllers.ShiftNameController.deleteShiftName()


#
# DbTeam
#

# Create a DbTeam
POST          /api/teams                                                  controllers.TeamController.createTeam()

# Read DbTeam by teamName
GET           /api/teams/:teamName                                        controllers.TeamController.retrieveTeam(teamName: String)

# Update DbTeam by teamName
PUT           /api/teams/:teamName                                        controllers.TeamController.updateTeam(teamName: String)

# Delete DbTeam by teamName
DELETE        /api/teams                                                  controllers.TeamController.deleteTeamByName()


#
# DbShift
#

# List DbShifts for a specific user
GET           /api/shifts/:teamId/:timeStart/:timeEnd                     controllers.ShiftController.readUsersAvailableForShift(teamId: Integer, timeStart: Long, timeEnd: Long)

# Create a DbShift
POST          /api/shifts                                                 controllers.ShiftController.createShift()

# Read all DbShifts
GET           /api/shifts                                                 controllers.ShiftController.readShifts()

# Delete a DbShift
DELETE        /api/shifts                                                 controllers.ShiftController.deleteShift()


#
# DbPermission
#

# List all DbPermissions
GET           /api/permissions                                            controllers.PermissionController.listPermissions()

# Create a DbPermission
POST          /api/permissions                                            controllers.PermissionController.createPermission()

# Read DbPermission by permissionId
GET           /api/permissions/:permissionId                              controllers.PermissionController.retrievePermission(permissionId: Integer)

# Delete DbPermission by permissionId
DELETE        /api/permissions                                            controllers.PermissionController.deletePermission()


#
# DbRole
#

# List all DbRoles
GET           /api/roles                                                  controllers.RoleController.listRoles()

# Create a DbRole
POST          /api/roles                                                  controllers.RoleController.createRole()

# Read DbRole by roleId
GET           /api/roles/:roleId                                          controllers.RoleController.retrieveRole(roleId: Integer)

# Delete DbRole by roleId
DELETE        /api/roles                                                  controllers.RoleController.deleteRole()


#
# DbRolePermission
#

# List all DbRolePermissions
GET           /api/roles/permissions                                      controllers.RolePermissionController.listRolePermissions()

# Create a DbRolePermission
POST          /api/roles/permissions                                      controllers.RolePermissionController.createRolePermission()

# Read DbRolePermission by rolePermissionId
GET           /api/roles/permissions/:rolePermissionId                    controllers.RolePermissionController.retrieveRolePermission(rolePermissionId: Integer)

# Delete DbRolePermission by rolePermissionId
DELETE        /api/roles/permissions                                      controllers.RolePermissionController.deleteRolePermission()


#
# DbOneTimeAvailability
#

# List all DbOneTimeAvailabilities
GET           /api/onetimeavailabilites                                   controllers.OneTimeAvailabilityController.listOneTimeAvailabilities()

# List all DbOneTimeAvailability in a time range
GET           /api/onetimeavailabilites/:timeStart/:timeEnd               controllers.OneTimeAvailabilityController.readOneTimeAvailabilitiesByTimeRange(timeStart: Long, timeEnd: Long)

# Create a DbOneTimeAvailability
POST          /api/onetimeavailabilites                                   controllers.OneTimeAvailabilityController.createOneTimeAvailability()

# Read DbOneTimeAvailability by oneTimeAvailabilityId
GET           /api/onetimeavailabilites/:oneTimeAvailabilityId            controllers.OneTimeAvailabilityController.retrieveOneTimeAvailability(oneTimeAvailabilityId: Integer)

# Delete DbOneTimeAvailability by oneTimeAvailabilityId
DELETE        /api/onetimeavailabilites                                   controllers.OneTimeAvailabilityController.deleteOneTimeAvailability()


#
# DbOneTimeUnavailability
#

# List all DbOneTimeUnavailabilities
GET           /api/onetimeunavailabilites                                 controllers.OneTimeUnavailabilityController.listOneTimeUnavailabilities()

# List all DbOneTimeUnavailability in a time range
GET           /api/onetimeunavailabilites/:timeStart/:timeEnd             controllers.OneTimeUnavailabilityController.readOneTimeUnavailabilitiesByTimeRange(timeStart: Long, timeEnd: Long)

# Create a DbOneTimeUnavailability
POST          /api/onetimeunavailabilites                                 controllers.OneTimeUnavailabilityController.createOneTimeUnavailability()

# Read DbOneTimeUnavailability by oneTimeUnavailabilityId
GET           /api/onetimeunavailabilites/:oneTimeUnavailabilityId        controllers.OneTimeUnavailabilityController.retrieveOneTimeUnavailability(oneTimeUnavailabilityId: Integer)

# Delete DbOneTimeUnavailability by oneTimeUnavailabilityId
DELETE        /api/onetimeunavailabilites                                 controllers.OneTimeUnavailabilityController.deleteOneTimeUnavailability()


