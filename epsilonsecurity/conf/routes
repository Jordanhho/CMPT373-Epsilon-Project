# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                                      controllers.Assets.versioned(path="/public", file: Asset)

# All other routes that lead to an invalid page. Show home page for now, should be
#GET        /*path                                            controllers.HomeController.index(path: String)
GET         /                                                 controllers.HomeController.index


# rest API added routes
GET         /                                                  controllers.UserController.listUsers()

# Call test function
GET         /user/create/$contactEmail<[a-z]+@[a-z]+.[a-z]+>   controllers.HomeController.test(contactEmail: String)

# Gets user from Int ID
GET        /$id<[0-9]+>                                        controllers.UserController.retrieveUser(id: Int)

# Creates a user
POST        /user/create/                                      controllers.UserController.createUser()

# Updates User
PATCH       /user/update/$id<[0-9]+>                           controllers.UserController.updateUser(id: Int)

# Deletes user by SFU email
DELETE      /user/delete/$sfuEmail<[a-z_]+@sfu.ca>             controllers.UserController.deleteUser(sfuEmail: String)

# Creates a UserShift
POST        /shifts/assign/                                    controllers.UserShiftController.createUserShift()

# Retrieves all shifts tied to a User
GET         /user/shifts/$sfuEmail<[a-z_]+@sfu.ca>             controllers.UserShiftController.retrieveUserShift(sfuEmail: String)

