# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file                      controllers.Assets.versioned(path="/public", file: Asset)

# All other routes that lead to an invalid page.
GET           /                                  controllers.HomeController.index

#
# DbUser
#

# Create a DbUser
POST          /user/                             controllers.UserController.createUser()

# Read DbUser by sfuEmail
GET           /user/:sfuEmail                    controllers.UserController.retrieveUser(sfuEmail: String)

# Update DbUser by sfuEmail
PUT           /user/:sfuEmail                    controllers.UserController.updateUser(sfuEmail: String)

# Delete DbUser by sfuEmail
DELETE        /user/:sfuEmail                    controllers.UserController.deleteUser(sfuEmail: String)


#
# DbUserShift
#

# Create a UserShift
POST          /user/shift/                       controllers.UserShiftController.createUserShift()

# Read UserShift by userId
GET           /user/shift/:userId                controllers.UserShiftController.retrieveUserShift(userId: Integer)

# Delete UserShift by userId
DELETE        /user/shift/:userId                controllers.UserShiftController.deleteUserShift(userId: Integer)


#
# DbShiftName
#

# Create a ShiftName
POST          /user/shift/name                   controllers.ShiftNameController.createShiftName()

# Delete ShiftName by shiftName
DELETE        /user/shift/name/:shiftName        controllers.ShiftNameController.deleteShiftName(shiftName: String)


#
# DbTeam
#

# Create a DbTeam
POST          /team                              controllers.TeamController.createTeam()

# Delete DbTeam by teamName
DELETE        /team/:teamName                    controllers.TeamController.deleteTeamByName(teamName: String)


